<div class="w-100 banner d-flex flex-column justify-content-center align-items-center">
<h1>Save any kind of movies</h1>
</div>
<div class="d-flex flex-column justify-content-center align-items-center mt-5">
  <div class="list-button">
    <h1>My Lists</h1>
    <%= link_to "Create New List", new_list_path, class: "btn btn-success text-light rounded-pill" %>
  </div>
  <div class="d-flex flex-row p-5 flex-wrap justify-content-center align-items-center gap-2 w-75">
    <ul class="d-flex flex-row justify-centent-center align-items-center gap-4 list-unstyled flex-wrap">
    <% @lists.each do |lista|  %>
    <li ><%= link_to lista.name, list_path(lista), class: "card" %></li>
    <% end %>
    </ul>
  </div>
</div>
