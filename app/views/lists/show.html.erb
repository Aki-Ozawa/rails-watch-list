<div class="d-flex flex-column justify-content-center align-items-center mt-5">
  <h1>Details</h1>
  <h2 class="h2"><%= @list.name %></h2>
  <ul class="list-group p-2 gap-1 list-unstyled">
  <% @list.bookmarks.each do |bookmark| %>
  <li class="list-group-item d-flex flex-row justify-content-between gap-4 rounded align-items-center m-1 border-1">comment:<%= bookmark.comment %>  <div class="vr"></div>movie name:  <%= bookmark.movie.title %> <%= link_to "delete", bookmark_path(bookmark), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "btn btn-danger text-light rounded" %></li>
  <% end %>
  </ul>
  <%= link_to "Create Bookmark", new_list_bookmark_path(@list), class: "btn btn-success text-light mt-5"%>
</div>
